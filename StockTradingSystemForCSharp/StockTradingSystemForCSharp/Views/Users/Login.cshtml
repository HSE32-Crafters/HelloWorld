@model StockTradingSystemForCSharp.Models.User
@{
    ViewBag.Title = "ログイン";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<!--＠Html.ValidationSummary()-->


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" type="text/css" href="../Css/LoginStyleSheet.css">
    <link rel="stylesheet" type="text/css" href="../Css/FormStyleSheet.css">
</head>
<body>
    <!--フォーム作成-->
    @using (@Html.BeginForm())
    {
        <table align="center">
            <tr>
                <th align = "left">ユーザID</th>
                <!-- テキストボックス作成 -->
                <td>@Html.TextBoxFor(model => model.UserID, new { size = 40 })</td>
            </tr>
            <tr>
                <th align = "left">パスワード</th>
                <td>@Html.PasswordFor(model => model.Password, new { size = 40 })</td>
            </tr>
            <tr>
                <td colspan="2">　</td>
            </tr>
            <tr>
                <th></th>
                <td colspan="2" align = "right">
                    <input type="submit" value="ログイン" />
                </td>
        </table>
    }
</body>
</html>
